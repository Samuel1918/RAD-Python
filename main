import tkinter as tk
from tkinter import ttk #TreeView
import modelo  as crud
class PrincipalBD():
    def __init__(self, win):
        self.objBD = crud.AppBD() #instancia da classe APPBD para manipular o banco de dados do modelo
        self.janela = win #Atribui a janela principal ao atributo self.janela
        self.treeProdutos = ttk.Treeview(self.janela, columns = ("Código do produto", "nome", "preço"), show="headings")#define os titulos das colunas
        self.treeProdutos.heading("Código do produto", text="Código do produto: ")
        self.treeProdutos.heading("nome",text="Nome:" )
        self.treeProdutos.heading("preço", text="Preço: ")
        self.treeProdutos.pack()
janela = tk.Tk() #Criação da janela principal
product_app = PrincipalBD(janela) #Cria uma instancia da classe PrincipalBD, passa como argumento a janela principal
janela.title("Bem vindo a aplicação de Banco de dados")
janela.geometry("900x700")
janela.mainloop()
